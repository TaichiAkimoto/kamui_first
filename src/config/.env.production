# データベース接続設定
DATABASE_URL=postgresql://username:password@production-db-host:5432/store_production
DATABASE_MAX_CONNECTIONS=50

# セキュリティ設定
JWT_SECRET=production_very_long_and_secure_secret_key
ENCRYPTION_KEY=production_strong_encryption_key

# API設定
API_BASE_URL=https://api.production.store.com/v1
API_TIMEOUT=5000

# 外部サービス連携
ANALYTICS_KEY=prod_analytics_tracking_key
PAYMENT_GATEWAY_URL=https://payment.production.gateway.com

# デプロイメント環境
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://www.store.production.com

# ロギング設定
LOG_LEVEL=error
LOG_ROTATION_MAX_SIZE=100m
LOG_ROTATION_MAX_FILES=10

# 多言語設定
DEFAULT_LANGUAGE=ja
SUPPORTED_LANGUAGES=ja,en

# キャッシュ設定
REDIS_URL=redis://production-redis-host:6379
CACHE_TTL=3600

# セキュリティ追加設定
CORS_ALLOWED_ORIGINS=https://www.store.production.com
RATE_LIMIT_MAX_REQUESTS=100;